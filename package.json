{
  "name": "mongodb-usermanagement",
  "version": "1.0.1",
  "description": "Single-file MongoDB user management application",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "concurrently \"tsc -p tsconfig.backend.json --watch\" \"nodemon dist/server.js\"",
    "dev:client": "npm run dev --prefix client",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.backend.json",
    "build:client": "npm run build --prefix client",
    "release": "release-it"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongodb": "^6.0.0"
  },
  "keywords": [
    "mongodb",
    "user-management",
    "express"
  ],
  "author": "",
  "license": "LGPL-3.0-or-later",
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "release-it": {
    "$schema": "https://unpkg.com/release-it@19/schema/release-it.json",
    "git": {
      "commitMessage": "chore(release): v${version}",
      "tagName": "v${version}",
      "requireCleanWorkingDir": true
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    }
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^20.17.10",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.9",
    "release-it": "^19.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
